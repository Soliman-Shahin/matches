<%- include('../partials/header') -%>
    <%- include('../partials/navbar') -%>
        <div class="container">
            <div class="row mt-4">
                <div class="col-md-12">
                    <h1 class="display-4">Edit the Match:</h1>
                    <hr>
                    <%- include('../partials/flashMessages') -%>
                        <form action="/matches/update" method="post">
                            <div class="form-group">
                                <label for="date">Date</label>
                                <input type="date" name="date" id="date" class="form-control" value="<%= match.date %>">
                            </div>
                            <input type="hidden" name="id" value="<%=match.id%>">
                            <div class="form-group">
                                <label for="homeTeam">homeTeam</label>
                                <input type="text" name="homeTeam" id="homeTeam" class="form-control" value="<%=match.homeTeam%>">
                            </div>
                            <div class="form-group">
                                <label for="awayTeam">awayTeam</label>
                                <input type="text" name="awayTeam" id="awayTeam" class="form-control" value="<%=match.awayTeam%>">
                            </div>
                            <div class="form-group">
                                <label for="startTime">startTime</label>
                                <input type="time" name="startTime" id="startTime" class="form-control" value="<%=match.startTime%>">
                            </div>
                            <div class="form-group">
                                <label for="endTime">endTime</label>
                                <input type="time" name="endTime" id="endTime" class="form-control" value="<%=match.endTime%>">
                            </div>
                            <div class="form-group">
                                <label for="homeTeamScore">homeTeamScore</label>
                                <input type="text" name="homeTeamScore" id="homeTeamScore" class="form-control" value="<%=match.homeTeamScore%>">
                            </div>
                            <div class="form-group">
                                <label for="awayTeamScore">awayTeamScore</label>
                                <input type="text" name="awayTeamScore" id="awayTeamScore" class="form-control" value="<%=match.awayTeamScore%>">
                            </div>
                            <div class="form-group">
                                <label for="isActive">isActive</label>
                                <input type="text" name="isActive" id="isActive" class="form-control" value="<%=match.isActive%>">
                            </div>
                            <div class="form-group">
                                <label for="league">league</label>
                                <input type="text" name="league" id="league" class="form-control" value="<%=match.league%>">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary"> Update</button>
                            </div>
                        </form>
                </div>
            </div>
        </div>


        <%- include('../partials/footer') -%>